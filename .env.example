# Environment Configuration Example
# Скопируйте этот файл в .env и настройте под свои нужды

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Application Settings
MAX_CONTENT_LENGTH=10485760  # 10MB в байтах
ALLOWED_EXTENSIONS=md,markdown,txt

# CORS Settings (опционально)
# CORS_ORIGINS=https://ваш-домен.ru,https://www.ваш-домен.ru

# PDF Generation Settings
PDF_OPTIMIZE_IMAGES=True
PDF_REMOVE_ALL_IMAGES=False
PDF_MAX_IMAGE_WIDTH=400
PDF_IMAGE_QUALITY=30

# Logging
LOG_LEVEL=INFO
